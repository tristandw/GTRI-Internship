my_name = 'Tristan'
my_age = 18
my_height = 71 #Height is in inches.
my_weight = 125 #Weight is in pounds.
my_eyes = 'dark brown'
my_teeth = 'white'
my_hair = 'black'

print "Hey, did you hear about %s?" % my_name
print "He is now %d inches tall now!" % my_height
print "He is also slim and only %d pounds." % my_weight
print "He has %s eyes and %s hair too." % (my_eyes, my_hair)
print "He also has the brightest smile and really %s teeth!" % my_teeth

#Example of combining and adding variables
print "If I add up %d, %d, and %d it will equal %d." % (my_age, my_height, my_weight, my_age + my_height + my_weight)
